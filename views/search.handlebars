{{!-- THIS WILL BE WHERE THE USER IS DIRECTED TO SEARCH FOR RECIPES IN THE DB --}}

<section>
    <div class="search-container">
        <p>
        <form class="search-form">
            <label for='search-form'>Search</label>
            <input type="text" id="search">
            <input type="submit" value="Submit">
        </form>
        </p>
        <div>
            <p>Search History</p>
        </div>
    </div>
    <div class="search-rendered">

        {{#each fixedRecipes as |recipe|}}
        {{> searched-recipes}}
        {{/each}}

    </div>
</section>

<script src="/js/search.js"></script>