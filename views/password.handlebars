<div class="login-card">
      <h2 class="page-title">Update Password</h2>
      <form class="form password-form">

        <div class="form-group">
          <label>Current Password:</label>
          <input class="form-input" type="password" id="current-pass" />
        </div>
        <div class="form-group">
          <label>New Password:</label>
          <input class="form-input" type="password" id="new-pass" />
        </div>
        <div class="form-group">
          <label>Confirm New Password:</label>
          <input class="form-input" type="password" id="confirm-pass" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">Update</button>
        </div>
      </form>
</div>

    <script src="/js/password.js"></script>